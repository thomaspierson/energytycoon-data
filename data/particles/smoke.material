material Smoke
{
	technique
	{
		pass
		{
			scene_blend alpha_blend
			depth_write off

			texture_unit
			{
				texture smoke.dds
				tex_address_mode clamp
			}
		}
	}
}

material SmokeCoal
{
	technique
	{
		pass
		{
			scene_blend alpha_blend
			depth_write off

			texture_unit
			{
				texture smoke_coal.dds
				tex_address_mode clamp
			}
		}
	}
}
